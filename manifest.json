{
    "manifest_version": 2,
    "name": "Addon-Info/Sync/Compatibility",
    "version": "1.1",
    "author": "opto (Klaus Buecher)",
    "applications": {
        "gecko": {
            "id": "addon-info-sync-compatibility@opto.one",
            "strict_min_version": "78.0"
        }
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "Check add-on updates and compatibility in next ESR\n\nMore info in Tools->Addons / settings page of this addon",
        "default_label": "",
        "default_icon": "skin/puzzle-piece32.png"    },


    "icons": {
        "32": "skin/puzzle-piece32.png"
      },
    
             

	"options_ui": {
		"page": "./popup/tt/ttt/options.html",
    "browser_style": true,
    "open_in_tab": true
	  },
	  

      
    "permissions": [
        "management", "activeTab", "tabs", "tabHide", "clipboardWrite" , "messagesModify", "notifications"
    ]
}
