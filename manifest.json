{
    "manifest_version": 2,
    "name": "Addon Compatibility Check",
    "version": "1.5",
    "author": "opto (Klaus Buecher)",
    "applications": {
        "gecko": {
            "id": "addoncompatibility@opto.one",
            "strict_min_version": "68.0"
        }
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "Addon compatibility",
        "default_icon": "skin/puzzle-piece32.png"   
    },


    "icons": {
        "32": "skin/puzzle-piece32.png"
      },
       
    "permissions": [
        "management",
        "storage"
    ]
}
